generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id String  @id @default(uuid())
  name String
  type PlaceType
  localization PlaceRegion
  description String
  coordinates Json @unique
  contacts  Json
  logo Json
  images Json[]
}

enum PlaceType {
  TURISTICO
  HOTEL
  POUSADA
  RESTAURANTE
  PETISCARIA
  BAR
}

enum PlaceRegion {
  ICARAI
  MOITAS
  CAETANOS
  FLECHEIRAS
}

model Users {
  id String @id @default(uuid())
  email String @unique
  password String?
  googleId String? @unique
  lastLoginAt String?
  role RoleUsers @default(TURISTA)
}

enum RoleUsers {
  ADMIN
  TURISTA
}  

model Mare {
  id     Int    @id @default(autoincrement())
  data   String
  hora   String
  altura Float

  @@unique([data, hora], name: "data_hora")
}
